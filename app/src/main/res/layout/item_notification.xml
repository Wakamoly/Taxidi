<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.lucidsoftworksllc.taxidi.others.models.server_responses.DriverNotificationsResponseModel.ProfileNotification" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/notification_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        app:fadeVisible="@{true}"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            app:notificationSeen="@{model.opened}"
            tools:background="@color/primaryDarkColor">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{model.profile_pic}"
                app:civ_border_width="@dimen/small_border_width"
                app:civ_border_color="@color/white"
                tools:src="@drawable/ic_check_circle_green_24"/>

            <ImageView
                android:id="@+id/notification_type"
                android:layout_width="@dimen/drawable_size_medium"
                android:layout_height="@dimen/drawable_size_medium"
                app:layout_constraintEnd_toEndOf="@id/profile_pic"
                app:layout_constraintBottom_toBottomOf="@id/profile_pic"
                tools:src="@drawable/ic_sharp_message_24"
                app:notificationType="@{model.type}"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_small"
                android:text="@{model.title}"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Title" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{model.message}"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/profile_description_example" />

            <TextView
                android:id="@+id/time_since"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:tvTimeSince="@{model.datetime}"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="@id/description"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="italic"
                tools:text="14 days ago" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>